<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.player.GamePlayerFragment"
    android:background="@color/BlackBackground">

    <Button
        android:id="@+id/leave_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="@dimen/width_button150"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin15"
        android:layout_marginEnd="@dimen/margin15"
        android:layout_weight="1"
        android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
        android:drawablePadding="@dimen/padding5"
        android:paddingEnd="@dimen/padding5"
        android:paddingStart="@dimen/padding35"
        android:background="@drawable/custom_button_green"
        android:text="@string/button_leave" />


    <ImageView
        android:id="@+id/player_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:contentDescription="@string/player_card_description"
        tools:src="@tools:sample/backgrounds/scenic" />


    <Button
        android:id="@+id/toggle_card_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin45"
        android:background="@drawable/custom_button_red"
        android:paddingStart="@dimen/padding35"
        android:paddingEnd="@dimen/padding35"
        android:text="@string/button_hide_card"
        android:textSize="@dimen/text_size_middle"/>

</LinearLayout>