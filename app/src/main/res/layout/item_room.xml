<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/number_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginTop="0dp"
            android:gravity="top"
            android:text="@string/number_stub"
            android:textSize="@dimen/text_size_higher" />

        <TextView
            android:id="@+id/name_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/room_item_margin"
            android:layout_toEndOf="@id/number_room"
            android:text="@string/room_stub"
            android:textSize="@dimen/text_size_higher"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/room_item_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:text="@string/players_stub"
            android:textSize="@dimen/text_size_higher" />
    </RelativeLayout>

</LinearLayout>