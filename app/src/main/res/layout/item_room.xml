<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BlackBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding5">

    <TextView
        android:id="@+id/number_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_room"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin45"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:textColor="@color/colorLightYellowText"
        />

    <TextView
        android:id="@+id/name_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_room"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin100"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/number_room"
        android:textColor="@color/colorLightYellowText"
        />

    <TextView
        android:id="@+id/number_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number_players_room"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin100"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin45"
        android:textColor="@color/colorLightYellowText"
        />
    </RelativeLayout>

</LinearLayout>