<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackBackground"
    android:orientation="vertical"
    tools:context=".ui.fragments.home.HomeFragment">

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin45"
        android:layout_marginEnd="@dimen/margin45"
        android:background="@null"
        android:contentDescription="@string/settings"
        android:src="@drawable/ic_settings_black_24dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_mafia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin120"
            android:fontFamily="@string/font_family_thin"
            android:text="@string/title_home"
            android:textColor="@color/colorWhiteText"
            android:textSize="@dimen/text_title" />

        <Button
            android:id="@+id/create_room_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin35"
            android:width="@dimen/width_button220"
            android:height="@dimen/height_button80"
            android:background="@drawable/custom_button_black"
            android:fontFamily="@string/font_family_thin"
            android:text="@string/create"
            android:textColor="@color/colorWhiteText"
            android:textSize="@dimen/text_size_very_higher" />

        <Button
            android:id="@+id/join_room_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="@dimen/width_button220"
            android:height="@dimen/height_button80"
            android:background="@drawable/custom_button_black"
            android:fontFamily="@string/font_family_thin"
            android:text="@string/join"
            android:textColor="@color/colorWhiteText"
            android:textSize="@dimen/text_size_very_higher" />

    </LinearLayout>


</RelativeLayout>