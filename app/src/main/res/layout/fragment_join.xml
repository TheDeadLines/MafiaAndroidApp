<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_border_white"
    android:orientation="vertical"
    tools:context=".ui.fragments.room.JoinFragment">

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginTop="@dimen/margin16"
        android:background="@null"
        android:text="@string/button_back"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_very_higher" />

    <TextView
        android:id="@+id/textSelectRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin32"
        android:gravity="center"
        android:text="@string/select_room"
        android:textColor="@color/colorWhiteText"
        android:textSize="@dimen/text_size_middle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rooms_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonBack"
        android:scrollbars="vertical"
        android:padding="@dimen/padding32"
        app:layoutManager="LinearLayoutManager" />

</RelativeLayout>