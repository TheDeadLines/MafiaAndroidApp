<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_border_white"
    android:orientation="vertical"
    tools:context=".ui.fragments.home.HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin32"
        android:layout_weight="0"
        android:text="@string/group_members"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_higher" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/host_players_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16"
        android:layout_weight="1"
        android:padding="@dimen/padding32" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_weight="0"
        android:layout_marginBottom="@dimen/margin32"
        android:orientation="vertical">

        <Button
            android:id="@+id/start_game_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin32"
            android:width="@dimen/width_button200"
            android:height="@dimen/height_button72"
            android:background="@drawable/custom_button_black"
            android:text="@string/start"
            android:textSize="@dimen/text_size_higher" />

        <Button
            android:id="@+id/cancel_game_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="@dimen/width_button200"
            android:height="@dimen/height_button72"
            android:background="@drawable/custom_button_black"
            android:text="@string/cancel"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_higher" />
    </LinearLayout>

</LinearLayout>

