<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_border_white"
    android:orientation="vertical"
    android:padding="@dimen/padding8"
    tools:context=".ui.fragments.host.GameHostFragment">

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16"
        android:gravity="center">

        <ImageButton
            android:id="@+id/toggle_list_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin16"
            android:layout_weight="1"
            android:background="@null"
            android:contentDescription="@string/button_back"
            android:src="@drawable/ic_keyboard_arrow_right_white_48dp"
            android:text="@string/button_host_open_list" />

        <Button
            android:id="@+id/finish_game_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin104"
            android:layout_marginEnd="@dimen/margin16"
            android:layout_weight="10"
            android:text="@string/finish_game"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_middle" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/host_toggle_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/host_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin48"
            android:contentDescription="@string/player_card_description"
            android:text="@string/game_host"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_highest"
            android:visibility="visible"
            tools:src="@tools:sample/backgrounds/scenic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin16"
            android:orientation="horizontal"
            android:padding="@dimen/padding16"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>